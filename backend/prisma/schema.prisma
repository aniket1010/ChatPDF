generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id        String    @id @default(cuid())
  title     String
  fileName  String
  filePath  String
  summary   String?   // AI-generated abstract/summary
  keyFindings String? // Key findings from the document
  introduction String? // Introduction overview
  tableOfContents String? // Extracted table of contents
  summaryGeneratedAt DateTime? // When summary was generated
  createdAt DateTime  @default(now())
  messages  Message[]
}

model Message {
  id             String      @id @default(cuid())
  role           String
  text           String
  createdAt      DateTime    @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String
}
